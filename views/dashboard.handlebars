<div class="container">
  <h2>Welcome to Your Dashboard</h2>
</div>

<br/>
<br/>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Charity Name</th>
            <th scope="col">Date Of Donation</th>
            <th scope="col">Amount Donated</th>
        </tr>
    </thead>
    <tbody>
        {{#each charities}}
        <tr>
            {{!-- <th scope="row">{{this._id}}</th>  --}}
            <td>{{this.name}}</td>
            <td>{{this.date}}</td>
            <td>${{this.amountDonated}}</td>
        </tr>
      {{/each}}
    </tbody>
</table>
